<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="inklabs\kommerce\Entity\AbstractCartPriceRuleItem"
            table="CartPriceRuleItem"
            inheritance-type="SINGLE_TABLE"
            repository-class="inklabs\kommerce\EntityRepository\CartPriceRuleItemRepository">

        <discriminator-column name="type" type="string" length="7"/>
        <discriminator-map>
            <discriminator-mapping value="product" class="CartPriceRuleProductItem"/>
            <discriminator-mapping value="tag" class="CartPriceRuleTagItem"/>
        </discriminator-map>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="uuid" type="uuid_binary"/>

        <field name="quantity" type="smallint">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <many-to-one field="cartPriceRule"
                     target-entity="inklabs\kommerce\Entity\CartPriceRule"
                     fetch="EAGER">
            <join-column nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
